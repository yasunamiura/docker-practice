<h1>Hello Dockers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hello_dockers.each do |hello_docker| %>
      <tr>
        <td><%= hello_docker.name %></td>
        <td><%= link_to 'Show', hello_docker %></td>
        <td><%= link_to 'Edit', edit_hello_docker_path(hello_docker) %></td>
        <td><%= link_to 'Destroy', hello_docker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

